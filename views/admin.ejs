<!DOCTYPE html>
<html lang="fr" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>sk-websocket-classroom-asker</title>
    <link rel="stylesheet" href="css/style.css">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, width=device-width, user-scalable=no">


    <script src="lib/jquery-3.4.1.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <script type="text/javascript">
      var socket = io.connect();
    </script>

    <script src="js/admin.js"></script>
  </head>

  <body id="page-admin">

    <div id="admin-client-view-state"></div>

    <div id="admin-controls" data-content-scope>


      <div class="admin-slides">

        <div class="admin-slide logs">
        </div>

        <div class="admin-slide">
          <div class="button button-small" data-emit="client/refresh">Client : refresh</div>
          <div class="button button-small" data-emit="client/clear">Client : clear</div>
          <div class="button button-small" data-emit="client/hide">Client : hide</div>
          <div class="button button-small" data-save-groups>Save groups</div>
        </div>

        <% groups.forEach(function(group) { %>
          <%- include('snippets/group', {group:group}); %>
        <% }); %>

        <div class="admin-slide slide-add-group">
          <div class="button button-small" data-add-group>Créer un groupe</div>
        </div>

      </div>

    </div>

    <div style="display:none" id="clones">
      <div id="fields-clones">
        <div class="field" data-field-type="button">
          <div class="field-value" contenteditable="true"></div>
          <div class="field-remove">✕</div>
        </div>
      </div>

      <div class="admin-slide group-container">
        <div class="group-remove">✕</div>
        <div class="group-fields">
          <div class="group-scrollable-container">
            <div class="group">

              <div class="field" data-field-type="button">
                <div class="field-value" contenteditable="true"></div>
                <div class="field-remove">✕</div>
              </div>

              <div class="field" data-field-type="button">
                <div class="field-value" contenteditable="true"></div>
                <div class="field-remove">✕</div>
              </div>

            </div>
            <div class="button button-small" data-add-field>Ajouter un choix</div>
          </div>
        </div>
        <div class="group-actions">
          <div class="button" data-send-group>▶ Diffuser</div>
        </div>
      </div>
    </div>

  </body>
</html>
